<div>
  <div>
    <h2>Edit Post</h2>
  </div>
  <form id='edit-post-form'>

    <label class='form-label' for='post-title'>Title</label>
    <input type='text' id='post-title' value='{{post.title}}' />

    <label class='form-label' for='post-body'>Content</label>
    <textarea id='post-body'>{{post.body}}</textarea>

    <button type='submit'>Submit your changes</button>

  </form>
</div>